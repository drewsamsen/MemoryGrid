<div class="one-comment">
  <p class="commenter-name"><%= comment.author_name %>:
    <% if comment.user_id == current_user.fb_user_id %>
        <%= link_to 'x', [@memory, comment], :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </p>


  <p class="comment-content"><%= comment.content %></p>
</div>